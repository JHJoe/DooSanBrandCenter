@model BrandCenter.Models.tblGroup

@{
    if (ViewBag.IsCreate == true)
    {
        ViewBag.Title = "Group Edit";
    }
    else
    {
        ViewBag.Title = "Group Create";
    }
    Layout = "~/Views/Shared/TestLayout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Student</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.GroupId)

        <div class="form-group">
            <label class="control-label col-md-2"> Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Desc</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descript, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descript, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Group")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
